<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/white">

    <View
        android:id="@+id/bg_progress"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/baby_blue"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:ellipsize="end"
        android:textSize="18sp"
        android:textColor="@color/darker_grey"
        android:layout_marginLeft="16dp"
        tools:text="Work"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_target_progress"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_progress_indicator"/>

    <TextView
        android:id="@+id/tv_progress_indicator"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/leaf_green"
        android:text="* In Progress"
        app:layout_constraintLeft_toLeftOf="@id/tv_name"
        app:layout_constraintRight_toRightOf="@id/tv_name"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_target_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/dark_grey"
        android:gravity="right"
        tools:text="Target: 10 hrs"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="@id/tv_target_progress"
        app:layout_constraintRight_toRightOf="@id/tv_target_progress"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_target_progress"/>

    <TextView
        android:id="@+id/tv_target_progress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/dark_grey"
        android:gravity="right"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        tools:text="Spent: 4 hrs"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/tv_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_target_amount"
        app:layout_constraintBottom_toTopOf="@id/tv_target_remaining"/>

    <TextView
        android:id="@+id/tv_target_remaining"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/dark_grey"
        android:gravity="right"
        tools:text="Remaining: 6 hrs"
        app:layout_constraintLeft_toLeftOf="@id/tv_target_progress"
        app:layout_constraintRight_toRightOf="@id/tv_target_progress"
        app:layout_constraintTop_toBottomOf="@id/tv_target_progress"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>